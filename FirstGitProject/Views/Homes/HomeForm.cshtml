
@model FirstGitProject.ViewModels.HomeFormViewModel

@{
    ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Homes"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Home.Address)
        @Html.TextBoxFor(m => m.Home.Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Home.City)
        @Html.TextBoxFor(m => m.Home.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Home.State)
        @Html.TextBoxFor(m => m.Home.State, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Home.Zip)
        @Html.TextBoxFor(m => m.Home.Zip, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Home.GenreId)
        @Html.DropDownListFor(m => m.Home.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Home.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}