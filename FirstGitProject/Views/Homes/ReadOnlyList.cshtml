
@model IEnumerable<FirstGitProject.Models.Home>

@{
    ViewBag.Title = "Homes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Homes</h2>

<table id="homes" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Home</th>
        <th>Type</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#homes").DataTable({
                ajax: {
                    url: "/api/homes",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "address",
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}